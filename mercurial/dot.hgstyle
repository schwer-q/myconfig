changeset = 'changeset:   {_head}\n{_user}\n{_date}\n{_description}{_files}\n\n'
_head = '{label("log.changeset changeset.{phase}", "[{phase}]")} {label("red", "{rev}:{node|short}")} {label("cyan", "{branch}")} {label("green", "{tags}")} {parents}'
_user = 'user:        {author}'
_date = 'date:        {date|date} ({date|age})'
_description = 'description:\n\t{splitlines(desc) % "{if(startswith("BUGID", sub("[0-9]+", "BUGID", word("0", line))), label("blue", word("0", line)))}{if(startswith("BUGID_FOR_SYNOPSYS", sub("[0-9]+", "BUGID_FOR_SYNOPSYS", word("0", line))), sub(word("0", line), "", line), line)}\n"|tabindent}'
_files = 'files:\n{file_adds}{file_mods}{file_dels}'
file_add = '\t{label("green", "A {file_add}")}\n'
file_del = '\t{label("red", "D {file_del}")}\n'
file_mod = '\t{label("magenta", "M {file_mod}")}\n'
